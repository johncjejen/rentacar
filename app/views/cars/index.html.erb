<!DOCTYPE html>
<html>
    <head>
        <title>Cars Availables</title>
    </head>
    <body>
        <div class="container">
	        <div class="d-flex justify-content-center h-100" align="center">
                <% if !@cars.blank? %>
                    <% @cars.each do |cars| %>
                        <div class="cardcars">
                            <h3 style="color:#ffffff;"><%=cars['name_car'].upcase%></h3>
                            <p align="center"><img src="<%=cars['photof'] %>" class='img_cars'></p>
                            <p><b>Description</b><br>
                            <%=cars['description']%></p>
                            <p><b>Model</b><br>
                            <%=cars['model']%></p>
                            <p><b>Hour Cost</b><br>
                            <%=cars['hour_cost']%></p>
                            <p><b>Review</b><br>
                            <%=cars['review']%></p>
                            <p><b>Rent Status</b><br>
                            <%=cars['rent_status']%></p>
                            <div class="card-footer">
                                <div class="d-flex justify-content-center links">
                                    <button class="button button2" style="padding:10px;width:88px"><%= link_to "Select", "view_car/#{cars['id']}", class:"linkto", :style=>'text-decoration : none' %></button>
                                    <a href="/index/index"><button class="button button2" style="padding:10px;width:88px">Home</button></a></p>
                                </div>
                            </div>
                        </div>
                    <%end%>
                <%else%>
                    <div class="card">
                        <h4>Not Cars yet</h4>
                            <a href="/cars/new"><button class="button button2">Offer Car</button></a>
                            <a href="/index/index">Home</a></p>
                    </div>
                <%end%>
            </div>
        </div>
    </body>
</html>
